{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "python",
          "style": "plain",
          "foreground": "#ddaeff",
          "properties": {
            "display_virtual_env": true,
            "dispplay_default": true,
            "display_version": true,
            "home_enabled": true,
            "display_mode": "always"
          }
        },
        {
          "properties": {
            "style": "full"
          },
          "template": "[{{ .Path }}]",
          "foreground": "#97D700",
          "type": "path",
          "style": "plain"
        },
        {
          "properties": {
            "time_format": "15:04"
          },
          "template": " {{ .CurrentDate | date .Format }}",
          "foreground": "#bcbcbc",
          "type": "time",
          "style": "plain"
        },
        {
          "properties": {
            "always_enabled": true,
            "style": "roundrock"
          },
          "template": " {{ reason .Code }}",
          "foreground": "#b8ff75",
          "type": "status",
          "style": "plain",
          "foreground_templates": [
            "{{ if gt .Code 0 }}#E06C75{{ end }}"
          ]
        }
      ],
      "newline": true
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "branch_max_length": 25,
            "fetch_stash_count": true,
            "fetch_status": true,
            "fetch_upstream_icon": true,
            "branch_icon": ""
          },
          "template": " {{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} | {{ end }}{{ if .Staging.Changed }} {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} {{ .StashCount }}{{ end }}",
          "foreground": "#bcbcbc",
          "type": "git",
          "style": "plain",
          "foreground_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#ffae00{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#ff4500{{ end }}",
            "{{ if gt .Ahead 0 }}#B388FF{{ end }}",
            "{{ if gt .Behind 0 }}#B388FF{{ end }}"
          ]
        }
      ],
      "newline": true
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "template": ">",
          "foreground": "#ff7783",
          "type": "shell",
          "style": "plain"
        }
      ],
      "newline": true
    }
  ],
  "version": 3,
  "final_space": true
}